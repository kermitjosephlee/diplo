generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            Int         @id @default(autoincrement())
  name          String
  userName      String      @unique
  email         String      @unique
  chatServiceId Int
  startDate     DateTime    @default(now())
  endDate       DateTime?
  isActive      Boolean     @default(true)
  password      String
  chatService   ChatService @relation(fields: [chatServiceId], references: [id])
  player        Player[]
}

model Game {
  id        Int       @id @default(autoincrement())
  name      String
  startDate DateTime  @default(now())
  endDate   DateTime?
  gameLog   String[]
  player    Player[]
  turn      Turn[]
}

model Country {
  id                Int                 @id @default(autoincrement())
  abbreviation      CountryAbbreviation
  name              CountryName
  adjective         CountryAdjective
  LocationInit      Location[]          @relation("initialNation")
  LocationOccupying Location[]          @relation("occupyingNation")
}

model Player {
  id        Int     @id @default(autoincrement())
  userId    Int
  gameId    Int
  isActive  Boolean @default(false)
  isWinner  Boolean @default(false)
  countryId Int
  game      Game    @relation(fields: [gameId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  orders    Order[]
}

model Turn {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  finalizedAt   DateTime
  gameId        Int
  year          Int
  phase         PhaseEnum
  season        SeasonEnum
  game          Game       @relation(fields: [gameId], references: [id])
  resultsOrders Order[]
  svg           String
}

model Order {
  id               Int        @id @default(autoincrement())
  createdAt        DateTime   @default(now())
  updatedAt        DateTime[]
  orders           String
  playerId         Int
  turnId           Int
  originId         Int
  destinationId    Int
  unitType         Unit
  coastId          Int?
  coast            Coast?     @relation(fields: [coastId], references: [id])
  actionType       ActionType @default(HOLD)
  supportingUnitId Int?
  player           Player     @relation(fields: [playerId], references: [id])
  turn             Turn       @relation(fields: [turnId], references: [id])
  origin           Location   @relation("origin", fields: [originId], references: [id])
  destination      Location   @relation("destination", fields: [destinationId], references: [id])
}

model Location {
  id                Int                  @id @default(autoincrement())
  name              String
  shortName         LocationAbbreviation
  isMaritime        Boolean
  isTerrestrial     Boolean
  isLandLocked      Boolean
  isSupplyCenter    Boolean
  initialNationId   Int?
  occupyingNationId Int?
  OrderOrigin       Order[]              @relation("origin")
  OrderDesitination Order[]              @relation("destination")
  LocationA         Border[]             @relation("locationA")
  LocationB         Border[]             @relation("locationB")
  initialNation     Country?             @relation("initialNation", fields: [initialNationId], references: [id])
  occupyingNation   Country?             @relation("occupyingNation", fields: [occupyingNationId], references: [id])
  Coast             Coast[]
  CoastLocation     CoastLocation[]
}

model Border {
  locationAId Int
  locationA   Location @relation("locationA", fields: [locationAId], references: [id])
  locationBId Int
  locationB   Location @relation("locationB", fields: [locationBId], references: [id])

  @@id([locationAId, locationBId])
  @@unique([locationAId, locationBId])
}

model Coast {
  id            Int             @id @default(autoincrement())
  locationId    Int
  location      Location        @relation(fields: [locationId], references: [id])
  coastName     CoastEnum
  Order         Order[]
  CoastLocation CoastLocation[]
}

model CoastLocation {
  id         Int      @id @default(autoincrement())
  coastId    Int
  locationId Int
  coast      Coast    @relation(fields: [coastId], references: [id])
  location   Location @relation(fields: [locationId], references: [id])
}

model ChatService {
  id                    Int      @id @default(autoincrement())
  serviceProvider       String
  serviceProviderUserId String
  userId                Int      @unique
  createdAt             DateTime @default(now())
  user                  User[]
}

enum Unit {
  ARMY
  NAVY
}

enum ActionType {
  MOVE
  HOLD
  SUPPORT
  CONVOY
}

enum PhaseEnum {
  BUILD
  MOVEMENT
  RETREAT
}

enum SeasonEnum {
